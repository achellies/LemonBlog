<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="@dimen/searchbar_padding"
    android:layout_marginRight="@dimen/searchbar_padding"
    android:background="@color/background_default"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/searchbar_padding"
                android:layout_marginRight="@dimen/searchbar_padding"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/square_hot_tweet"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_hot_tweet"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_hot_tweet"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_hot_huati"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_hot_huati"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_hot_huati"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_around_people"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_around_people"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_around_people"
                    android:textColor="@color/black"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/searchbar_padding"
                android:layout_marginRight="@dimen/searchbar_padding"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/square_around_tweet"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_around_tweet"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_around_tweet"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_vip"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_vip"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_vip"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_casual_look_at"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_casual_look_at"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_casual_look_at"
                    android:textColor="@color/black"
                    android:textSize="18dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>