<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="@dimen/searchbar_padding"
    android:layout_marginRight="@dimen/searchbar_padding"
    android:background="@color/background_default"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/searchbar_padding"
                android:layout_marginRight="@dimen/searchbar_padding"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/square_limemobile_books"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_limemobile_books"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_limemobile_books"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_limemobile_news"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_limemobile_news"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_limemobile_news"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_shake"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_shake"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_shake"
                    android:textColor="@color/black"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/searchbar_padding"
                android:layout_marginRight="@dimen/searchbar_padding"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/square_blowing"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_dandelion"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_blowing"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/list_item_selector"
                        android:clickable="true"
                        android:drawablePadding="10dip"
                        android:drawableTop="@drawable/icon_163_weibo"
                        android:gravity="center"
                        android:padding="5dip"
                        android:text="@string/square_163_weibo"
                        android:textColor="@color/black"
                        android:textSize="18dip"
                        android:visibility="invisible" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/list_item_selector"
                            android:clickable="true"
                            android:drawablePadding="10dip"
                            android:drawableTop="@drawable/icon_163_weibo"
                            android:gravity="center"
                            android:padding="5dip"
                            android:text="@string/square_163_weibo"
                            android:textColor="@color/black"
                            android:textSize="18dip"
                            android:visibility="invisible" />
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>