<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="@dimen/searchbar_padding"
    android:layout_marginRight="@dimen/searchbar_padding"
    android:background="@color/background_default"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/searchbar_padding"
                android:layout_marginRight="@dimen/searchbar_padding"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/square_guess_you_like"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_guess_you_like"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_guess_you_like"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_weather"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/square_weather"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_weather"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_163_weibo"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_163_weibo"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_163_weibo"
                    android:textColor="@color/black"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/searchbar_padding"
                android:layout_marginRight="@dimen/searchbar_padding"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/square_sina_weibo"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_sina_weibo"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_sina_weibo"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_sohu_weibo"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_sohu_weibo"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_sohu_weibo"
                    android:textColor="@color/black"
                    android:textSize="18dip" />

                <TextView
                    android:id="@id/square_tencent_weibo"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:drawablePadding="10dip"
                    android:drawableTop="@drawable/icon_qq_weibo"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="@string/square_tencent_weibo"
                    android:textColor="@color/black"
                    android:textSize="18dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>